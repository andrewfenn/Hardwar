float4x4 g_worldViewProj;

struct vertexOutput 
{
    float4 HPosition	: POSITION;
    float2 UV			: TEXCOORD0;
};

vertexOutput main_vp(float4 Position : POSITION, 
					  float3 TexCoord : TEXCOORD0)
{
    vertexOutput OUT = (vertexOutput)0;
    OUT.HPosition = mul(g_worldViewProj, Position); 
    OUT.UV = TexCoord.xy; 
    return OUT;
}

float4 main_fp(vertexOutput IN,
				uniform sampler2D SceneSampler : register(s1)) : COLOR 
{   
    return float4(1,0.8,0.0,1.0);
}
